.item{
  border-bottom: 2px solid #ddd;
  margin: 5px;
  display: flex;
  flex-direction: column
}
.userinfo{
  padding: 5px;
  display: flex;
  justify-content: space-between
}
.userinfo image{
  height: 24px;
  width: 24px;
}
.userinfo text{
  font-size: 14px;
  color: #888888
}
.tab{
  height: 28px;
  background: #ebe5e5;
  border-radius: 10%
}
.tab text{
  padding: 5px
}
.title{
  font-size: 20px;
  padding: 5px;
  color: #353535
}
.count{
  display: flex;
  justify-content: space-between;
  padding: 5px;
  font-size: 17px;
  color: #888888
}
.count text#visit_count{
  color: #7f81fa
}
.count text#reply_count{
  color: #c6a9f7
}