.ad_popError{ 
  background: #de352d; 
  color: #fff; 
  height: 70rpx; 
  line-height: 58rpx; 
  font-size: 30rpx; 
  text-align: center; 
  position: absolute; 
  left: 0; 
  top: 0; 
  width: 100%; 
  z-index:3;
}
.item{
  border-bottom: 2px solid #ddd;
  display: flex;
  flex-direction: column
}
.title{
  font-size: 20px;
  font-weight: bold;
  padding: 5px;
  /* color: #353535 */
}
.create{
  display: flex;
  justify-content: space-between;
  padding: 5px;
  font-size: 16px;
  color: #888888;
}
.content{
  padding: 10px;
  border-bottom: 15px solid #ddd
}
.reply_count{
  padding: 10px;
  background: #f7f5f5;
  color: #888888
}
.reply{
  padding: 5px;
  display: flex;
  flex-direction: row;
  /* flex-wrap: nowrap */
  border-bottom: 1px solid #ddd;
  margin-top: 5px;
  margin-bottom: 5px
}
.reply_img{
  /* height: 40px; */
  /* width: 40px; */
  width: 15%
}
.reply_info{
  /* margin-left: 10px; */
  width: 85%
}
.reply_time text:first-child{
  font-size: 14px;
  color: #353535;
  margin-left: 0px
}
.reply_time text:last-child{
  font-size: 14px;
  color: #10b2fd;
  margin-left: 10px
}
.reply_content{
  margin-top: 10px;
  margin-bottom: 10px;
  margin-left: 10px
}